<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" tools:node="merge"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.xetterfb.xetterchat.MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:hardwareAccelerated="true"
        android:icon="@drawable/logo1bg"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/logo1bg"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Activities -->
        <activity android:name="com.xetterfb.xetterchat.MainActivity"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />

        <!-- Group Settings Activities -->
        <activity
            android:name="com.xetterfb.xetterchat.groupSettings.GUsernameActivity"
            android:exported="true"/>
        <activity
            android:name="com.xetterfb.xetterchat.groupSettings.GnameActivity"
            android:exported="true"/>
        <activity
            android:name="com.xetterfb.xetterchat.groupSettings.gLinkActivity"
            android:exported="true"/>
        <activity
            android:name="com.xetterfb.xetterchat.groupSettings.GbioActivity"
            android:exported="true"/>

        <!-- Settings Activities -->
        <activity
            android:name="com.xetterfb.xetterchat.settings.UsernameActivity"
            android:exported="true"/>
        <activity
            android:name="com.xetterfb.xetterchat.settings.NameActivity"
            android:exported="true"/>
        <activity
            android:name="com.xetterfb.xetterchat.settings.LocationActivity"
            android:exported="true"/>
        <activity
            android:name="com.xetterfb.xetterchat.settings.LinkActivity"
            android:exported="true"/>
        <activity
            android:name="com.xetterfb.xetterchat.settings.BioActivity"
            android:exported="true"/>

        <!-- Menu Activities -->
        <activity
            android:name="com.xetterfb.xetterchat.menu.ChangeEmail"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xetterfb.xetterchat.menu.ChangePassword"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xetterfb.xetterchat.menu.Policy"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xetterfb.xetterchat.menu.Saved"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />

        <!-- Post Activities -->
        <activity
            android:name="com.xetterfb.xetterchat.post.Post"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xetterfb.xetterchat.post.PostLikedBy"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xetterfb.xetterchat.post.PostDetails"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xetterfb.xetterchat.post.UpdatePost"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />

        <!-- Group Activities -->
        <activity
            android:name="com.xetterfb.xetterchat.groups.GroupProfile"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xetterfb.xetterchat.groups.AddParticipants"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xetterfb.xetterchat.groups.GroupChat"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xetterfb.xetterchat.groups.CreateGroup"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xetterfb.xetterchat.groups.ShareGroupActivity"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />

        <!-- Share Chat Activities -->
        <activity
            android:name="com.xetterfb.xetterchat.shareChat.ShareChatActivity"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="video/*" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.xetterfb.xetterchat.shareChat.ShareActivity"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />

        <!-- User Profile Activities -->
        <activity
            android:name="com.xetterfb.xetterchat.user.UserProfile"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xetterfb.xetterchat.user.MyFollowing"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xetterfb.xetterchat.user.FollowersList"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xetterfb.xetterchat.user.StoryView"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xetterfb.xetterchat.user.AddStory"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" />

        <!-- Firebase Authentication Activities -->
        <activity
            android:name="com.xetterfb.xetterchat.authPhone.Final"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />
        <activity
            android:name="com.xetterfb.xetterchat.authPhone.VerifyOTP"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />
        <activity
            android:name="com.xetterfb.xetterchat.authPhone.GenerateOTP"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />
        <activity
            android:name="com.xetterfb.xetterchat.authEmail.ForgotPassword"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />
        <activity
            android:name="com.xetterfb.xetterchat.authEmail.Finish"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />
        <activity
            android:name="com.xetterfb.xetterchat.authEmail.SignUp"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />
        <activity
            android:name="com.xetterfb.xetterchat.authEmail.SignIn"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />

        <!-- Welcome Screens -->
        <activity
            android:name="com.xetterfb.xetterchat.welcome.SplashScreen"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.xetterfb.xetterchat.welcome.IntroActivity"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />
        <activity
            android:name="com.xetterfb.xetterchat.welcome.IntroLast"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />

        <!-- Firebase Messaging Service -->
        <service
            android:name="com.xetterfb.xetterchat.notifications.FirebaseMessaging"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- File Provider -->
        <provider android:name="androidx.core.content.FileProvider"
            android:authorities="com.xetterfb.xetterchat.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths" />
        </provider>

        <!-- Meta-data for Google Ads -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5555588461149380~5731059622" />

    </application>

</manifest>